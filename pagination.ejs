<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <h1>phan trang</h1>
  <div class="filter">
   color
    <% dktimkiem.color.map( ele => { %>
      <% if(findObject.color && findObject.color['$in'].includes(ele)){ %>
        <input type="checkbox" value="<%= ele %>" name="color" checked> <%= ele %>
      <% }else{ %>
        <input type="checkbox" value="<%= ele %>" name="color" > <%= ele %>
      <% } %>
    <% }) %>
    <br>
    mark
    <% filter.mark.map( ele => { %>
      <% if(findObject.mark && findObject.mark['$in'].includes(ele)){ %>
        <input type="checkbox" value="<%= ele %>" name="mark" checked> <%= ele %>
      <% } else{ %>
        <input type="checkbox" value="<%= ele %>" name="mark" > <%= ele %>
      <% } %>
    <% }) %>
    <br>
    age
    <% filter.age.map( ele => { %>
      <% if(findObject.age && findObject.age['$in'].includes(ele)){ %>
        <input type="checkbox" value="<%= ele %>" name="age" checked> <%= ele %>
      <% } else{ %>
        <input type="checkbox" value="<%= ele %>" name="age" > <%= ele %>
      <% } %>
    <% }) %>
  </div>
  <div class="list">
    <%- include('./listUser.ejs') %>
  </div>
    
  <div class="btnList" style="display: flex">
    <button><<</button>
    <div class="btnGroup">
      <% for( var i=0; i < total ; i++ ) { %>
        <button value="<%= i +1 %>" class="pageBtn" onclick="check('<%= i +1 %>','<%= total %>')"> <%= i+1 %> </button>
      <% } %>
    </div>
    <button class="nextBtn">>></button>
  </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input type="text" name="" id="username">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary closeModal" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary save">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
