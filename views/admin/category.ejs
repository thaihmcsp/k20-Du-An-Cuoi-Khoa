<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CATEGORY LAZADA</title>
    <link rel="icon" href="/public/icon/logo-lazada.png" type="image/x-icon" />
    <link rel="stylesheet" href="../public/css/admin/category.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('./header.ejs') %> <br />
    <div class="bangchange">
      <div class="change">
        <h4>
          Thêm phân loại sản phẩm <i class="fa-solid fa-heart-circle-plus"></i>
        </h4>
        <form enctype="multipart/form-data" id="bangadd">
          <input
            type="text"
            id="name"
            name="name"
            placeholder="VD: Đồ gia dụng"
          /><br />
          <small class="note1"></small> <br />
          <input
            id="clickavatar"
            type="file"
            name="thumbnail"
            style="display: none"
          />
          <img
            src="/public/upload/add.jpg"
            alt=""
            id="change"
            onclick="importData()"
          />
          <br />
          <small class="note2"></small> <br />
        </form>
        <button onclick="addCategory()" id="add">
          ADD <i class="fa-solid fa-circle-plus"></i>
        </button>
      </div>
    </div>
    <div class="category">
      <div class="row"><%- include('./datacategory.ejs') %></div>
    </div>
    <div>
      <div class="trang">
        <button class="back" onclick="back('<%= total %>')"><<</button>
        <% for(let i = 0 ; i < total ; i ++){%>
        <button
          class="Btn"
          value="<%= i + 1 %>"
          onclick="but('<%= i + 1 %>', '<%= total %>')"
        >
          <%= i + 1 %>
        </button>
        <%}%>
        <button class="next" onclick="next('<%= total %>')">>></button>
      </div>
    </div>
  </body>

  <!-- Modal -->
  <div
    class="modal fade"
    id="staticBackdrop"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
    tabindex="-1"
    aria-labelledby="staticBackdropLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content" id="content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">
            Bạn muốn xoá dữ liệu này?
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body" id="body-yes-no">
          <div>
            <button
              type="button"
              data-bs-dismiss="modal"
              class="close"
              id="yes-no"
            >
              NO
            </button>
          </div>
          <div>
            <button onclick="deletethumbanail()" id="yes-no">YES</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content" id="content">
        <div class="modal-header">
          <h5 class="modal-title" id="headerchange">Change Category</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body" id="bodychang">
          <form enctype="multipart/form-data" id="form">
            <input
              type="text"
              class="name"
              name="name"
              placeholder="Chỉnh Sửa: Quần Áo"
              id="nameid"
            />
            <small class="note"></small>
            <input
              id="clickimg"
              type="file"
              name="thumbnail"
              style="display: none"
            />
            <img
              src="/public/upload/add.jpg"
              alt=""
              id="changeimg"
              onclick="importimg()"
            />
            <small class="note"></small>
          </form>
        </div>
        <div class="modal-footer" id="footer-change">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
            id="close"
          >
            Close
          </button>
          <button
            type="button"
            class="btn btn-primary"
            onclick="Up()"
            id="changee"
          >
            Up Date
          </button>
        </div>
      </div>
    </div>
  </div>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  ></script>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
  <script src="/public/js/admin/category.js"></script>
</html>
