<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../public/css/admin/category.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <table>
        <% listcategory.map(function(value,i){%>
          <tr>
            <td><%= value.name %></td>
            <td><img src="/<%= value.thumbnail %>" alt="" class="imgthumbnail"></td>
            <td>
              <button type="button" onclick="update('<%= value._id %>')" id = '<%= value._id %>'data-bs-toggle="modal" data-bs-target="#exampleModal">
                ...
              </button></td>
              <td> 
                <button type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="xoa('<%= value._id %>')">
                  X
                </button>
              </td>
            </tr>
           <% }) %>
    </table>

  </body>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Bạn muốn xoá dữ liệu này?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <button type="button"  data-bs-dismiss="modal">NO</button>
        <button onclick="deletethumbanail()">YES</button>
      </div>
    </div>
  </div>
</div>

  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form enctype="multipart/form-data" id="form">
            <input type="text" cla="name" name="name" placeholder="Chỉnh Sửa: Quần Áo" id="nameid"/>
            <small class="note"></small>
            <input id="clickimg" type="file" name="thumbnail" style="display: none" />
            <img src="/public/upload/add.jpg" alt="" id="changeimg" onclick="importimg()" />
            <small class="note"></small>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="close">Close</button>
          <button type="button" class="btn btn-primary" onclick="Up()">Up Date</button>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="../public/js/admin/category.js"></script>
</html>
