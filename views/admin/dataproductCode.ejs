<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../public/css/admin/productcode.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <table>
        <% listproductCode.map(function(value){%>
            <tr>
                <td>Code: <%= value.code %></td>
                <td><a href="/product/<%= value._id %>">Name: <%= value.name %></a></td>
                <td> <img src="/<%= value.thumbnail %>" alt="" class="anh"></td>
                <td>Price: <%= value.price %></td>
                <td>  <!-- Button trigger modal -->
                  <button type="button"  data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="update('<%= value.id %>')">
                    ...
                  </button></td>
                <td>
                  <button type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="xoa('<%= value.id %>')">
                    X
                  </button>
                </td>
            </tr>
        <%})%>
    </table>
  </body>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Bạn muốn xoá dữ liệu này?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <button type="button"  data-bs-dismiss="modal">NO</button>
        <button onclick="yes()">YES</button>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update ProductCode</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form enctype="multipart/form-data" id="form">
          <input type="text" class="code"placeholder="Code" name="code"/>
          <input type="text" class="name" name="name" placeholder="Name" />
          <input id="clickimg" type="file" name="thumbnail" style="display: none" />
          <img src="/public/upload/add.jpg" alt="" id="changeimg" onclick="impor()" />
          <select class="category" name="categoryID">
              <% listategory.map(function(value){%>
                  <option value="<%= value.id %>"><%= value.name %></option>
              <%}) %>
          </select>
          <input type="number" class="price" name="price" placeholder="Price"/>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="Save()">Update</button>
      </div>
    </div>
  </div>
</div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="../public/js/admin/productCode.js"></script>
</html>
