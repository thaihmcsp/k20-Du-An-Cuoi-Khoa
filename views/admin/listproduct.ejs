<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LIST PRODUCT LAZADA</title>
    <link rel="icon" href="/public/upload/logo-lazada.png" type="image/x-icon" />
    <link rel="stylesheet" href="../public/css/admin/category.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <h1>ListProduct</h1>
    <%- include('./header.ejs') %> <br />
    <form enctype="multipart/form-data">
      <h4>Thêm sản phẩm <i class="fa-solid fa-heart-circle-plus"></i></h4>
      <input type="file" id="listImg" name="listImg" style="display: none;" multiple/>
      <img src="/public/upload/add.jpg" alt="" id="change" onclick="importData()" /> <br>
      <input type="text" placeholder="Color" id="color" name="color"/>
      <select name="size" id="size">
        <option value="S">S</option>
        <option value="M">M</option>
        <option value="L">L</option>
        <option value="XL">Xl</option>
      </select>
      <input type="number" id="quantity" name="quantity" />
    </form>
    <button onclick="ADD()">ADD</button><br>
    <table>
      <% listproduct.map(function(value){%>
        <tr>
          <td>
            <% for (item of value.listImg) { %>
              <img src="/<%= item %>" alt="" class="imgthumbnail">
            <% } %>
          </td>
          <td>Color: <%= value.color %></td>
          <td>Size: <%= value.size %></td>
          <td>Quantity: <%= value.quantity %></td>
          <td>
            <button type="button"  data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="up('<%= value.id %>')">
              ...
            </button>
          </td>
          <td >
            <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="xoaproduct('<%= value.id %>')">
              X
            </button>
          </td>
        </tr>
      <%}) %>
    </table>
    <div class="luong">
    </div>
  </body>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form enctype="multipart/form-data" id="form">
          <input type="file" id="listimgid" name="listimgid" multiple/>
          <input type="text" placeholder="Color" id="colorid" name="colorid"/>
          <select name="sizeid" id="sizeid">
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">Xl</option>
          </select>
          <input type="number" id="quantityid" name="quantityid" />
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="update()">Understood</button>
      </div>
    </div>
  </div>
</div>
  
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Bạn muốn xoá dữ liệu này?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <button type="button" data-bs-dismiss="modal">NO</button>
        <button onclick="yes()">YES</button>
      </div>
    </div>
  </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="../public/js/admin/listproduct.js"></script>
</html>
