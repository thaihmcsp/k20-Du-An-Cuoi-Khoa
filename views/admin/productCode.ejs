<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PRODUCT CODE LAZADA</title>
    <link rel="icon" href="/public/icon/lazada-logo.png" type="image/x-icon" />
    <link rel="stylesheet" href="/public/css/admin/productcode.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('./header.ejs') %> <br />
    <div class="bangchange">
      <div class="change">
        <h4>
          Thêm code sản phẩm <i class="fa-solid fa-heart-circle-plus"></i>
        </h4>
        <form enctype="multipart/form-data">
          <div class="nhom1">
            <input
              type="text"
              id="code"
              placeholder="VD: Mã hàng hoá"
              name="code"
            />
            <br />
            <input
              type="number"
              id="price"
              name="price"
              placeholder="VD: 8.000.000"
            />
          </div>
          <small class="note1"></small>
          <small class="note5"></small>
          <div class="nhom2">
            <input
              type="text"
              id="name"
              name="name"
              placeholder="VD: Quần Jean"
            />
            <select id="category" name="categoryID">
              <% listategory.map(function(value){%>
              <option value="<%= value.id %>"><%= value.name %></option>
              <%}) %>
            </select>
          </div>
          <small class="note2"></small> <br />
          <input
            id="clickavatar"
            type="file"
            name="thumbnail"
            style="display: none"
          />
          <img
            src="/public/icon/add.png"
            alt=""
            id="change"
            onclick="importData()"
          /><br />
          <small class="note3"></small>
        </form>
        <link
          rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer"
        />
        <button onclick="add()" id="add">
          ADD <i class="fa-solid fa-circle-plus"></i>
        </button>
      </div>
    </div>
    <div class="butt"></div>
    <div class="trang-day">
      <button class="back" onclick="back('<%= total %>')"><<</button>
      <% for(let i = 0 ; i < total ; i ++){%>
      <button
        class="Btn"
        value="<%= i + 1 %>"
        onclick="but('<%= i + 1 %>', '<%= total %>')"
      >
        <%= i + 1 %>
      </button>
      <%}%>
      <button class="next" onclick="next('<%= total %>')">>></button>
    </div>
  </body>

  <div
    class="modal fade"
    id="staticBackdrop"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
    tabindex="-1"
    aria-labelledby="staticBackdropLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">
            Bạn muốn xoá dữ liệu này?
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body" id="body-yes-no">
          <button
            type="button"
            data-bs-dismiss="modal"
            class="closae"
            id="yes-no"
          >
            NO
          </button>
          <button onclick="yes()" id="yes-no">YES</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header" id="conten-header">
          <h5 class="modal-title" id="exampleModalLabel-a">
            Update ProductCode
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form enctype="multipart/form-data" id="form">
            <div class="it">
              <input type="text" class="code" placeholder="Code" name="code" />
              <select class="category" name="categoryID">
                <% listategory.map(function(value){%>
                <option value="<%= value.id %>"><%= value.name %></option>
                <%}) %>
              </select>
            </div>
            <div class="it">
              <input type="text" class="name" name="name" placeholder="Name" />
              <input
                type="number"
                class="price"
                name="price"
                placeholder="Price"
              />
            </div>
            <div class="anh-chien">
              <input
                id="clickimg"
                type="file"
                name="chien"
                style="display: none"
              />
              <img
                src="/public/upload/add.jpg"
                alt=""
                id="changeimg"
                onclick="impor()"
              />
            </div>
          </form>
        </div>
        <div class="modal-footer" id="footer-chien">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
            id="close"
          >
            Close
          </button>
          <button
            type="button"
            class="btn btn-primary"
            onclick="Save()"
            id="update-day"
          >
            Update
          </button>
        </div>
      </div>
    </div>
  </div>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  ></script>
  <script src="../public/js/admin/productCode.js"></script>
</html>
