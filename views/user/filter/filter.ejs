        <!-- khối bên phải header đã xong -->
        <div class="khoibenphai">
          <div class="headerkhoiphai">
            <% let total %> <% if(dktimkiem.color){%> <%
            listproduct.map(function(value,index){ %> <%= value %> <% })%> <%
            }%> <% list123.map(function(value,index){ %> <% total = index %> <%
            }) %> <% if(total>0){%> Có <%= total+1 %> kết quả tìm được theo "
            <%= ten %> "<% } else{%> Không có kết quả tìm được theo : <%= ten %>
            <% }%>
          </div>
          <div class="noidungbenphai">
            <div class=""></div>

            <% list.map(function(value,index){ %>
            <div class="khoi0">
              <div class="khoi1">
                <div class="khoi11">
                  <a href="product/detail/<%= value._id %>">
                    <div class="xephang123">
                      <div class="">
                        <img src="<%= value.thumbnail %>" alt="" />
                      </div>
                      <div class="chubinhthuong">
                        tên sản phẩm: <%= value.name %>
                      </div>
                    </div>
                  </a>
                </div>
                <div class="khoi12">
                  <div class="">sản phẩm có giá là <%= value.price %></div>
                </div>
              </div>
            </div>

            <% }) %>
          </div>

          <!-- phân trang -->
          <div class="phantrang">
            <button onclick="changepagetruoc('<%=pagenow%>','<%= ten %>')">
              <-
            </button>
            <div class="phantranggiua">
              <% let total1 = total+1 %> <% list.map(function(value,index){ %>
              <% if(index<total1/8){%>
              <button onclick="changepage('<%= index+1 %>','<%= ten %>')">
                <%= index+1 %> <%= dktimkiem.color %> <%= dktimkiem.size %>
              </button>
              <% }%> <% }) %>
            </div>
            <button
              onclick="changepagesau('<%= pagenow %>','<%= ten %>','<%=total1/8 %>')"
            >
              ->
            </button>
          </div>
        </div>
      </div>
