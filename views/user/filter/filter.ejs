            <input id="giatoithieu" placeholder="Tối thiểu" type="number" />
            <input id="giatoida" placeholder="Tối đa" type="number" />
            <button onclick="timtheogia('<%=pagenow%>','<%= ten %>')">
              Tìm theo giá
            </button>
          </div>
          <div class="_9xWFp"><b>Mầu sắc</b></div>
          <div class="chieudoc">
            <div class="">
              <span class=""><input type="checkbox" /> </span><span>red</span>
            </div>
            <div class="">
              <span class=""><input type="checkbox" /> </span><span>blue</span>
            </div>
            <div class="">
              <span class=""><input type="checkbox" /> </span><span>white</span>
            </div>
            <div class="">
              <span class=""><input type="checkbox" /> </span
              ><span>mixcolor</span>
            </div>
            <div class="">
              <span class=""><input type="checkbox" /> </span><span>black</span>
            </div>
          </div>
          <div class="_9xWFp"><b>Size</b></div>
          <div class="chieudoc">
            <div class="">
              <span class=""><input type="checkbox" class="" /></span
              ><span>S</span>
            </div>
            <div class="">
              <span class=""><input type="checkbox" class="" /></span
              ><span>M</span>
            </div>
            <div class="">
